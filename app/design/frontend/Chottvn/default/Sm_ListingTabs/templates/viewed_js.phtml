                        viewedProductIds = Object.keys(JSON.parse(window.localStorage.getItem('recently_viewed_product')));
                     }
                     $.ajax({
                         type: 'POST',
                         url: ajax_url,
                         data: {
                             viewed_product_ids: viewedProductIds,
                             is_ajax_listing_tabs: 1,
                             ajax_listingtabs_start: rl_start,
                             tab_id: tab_id,
                             catids: catids,
                             moduleid: '<?php echo $tag_id; ?>',
