 require(['jquery', 'mageplaza/core/owl.carousel'], function ($) {
     ;
     (function (element) {
         var el = $(element),
             tabs_wrap = $('.ltabs-tabs-wrap', el),
             tab = $('.ltabs-tab', el),
             tab_active = $('.ltabs-tab.tab-sel .ltabs-tab-label', tabs_wrap),
             tab_content = $('.ltabs-items', el),
             ajax_url = '<?php echo $this->getAjaxUrl(); ?>',
