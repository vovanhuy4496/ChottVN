use Mageplaza\BannerSlider\Model\Config\Source\Type;

$banners = $block->getBannerCollection();
if (count($banners)) : ?>
    <?php
    $sliderId      = $block->getSliderId() . uniqid('-', false);
    $sliderOptions = $block->getBannerOptions();

    // Get additional css class
    $css_class = $block->getData('css_class')  ? ' ' . $block->getData('css_class')  : '';

    // add custom option to owlCarousel
    $temp = json_decode($sliderOptions, TRUE);
    $temp['dotsContainer'] = '#custom-dots-container-'.$sliderId;
    $customSliderOptions = json_encode($temp);
    ?>
    <div class="carousel-container">
        <div id="banner-slider-carousel" class="banner-slider-carousel-<?= $sliderId; ?><?= $css_class; ?>">
            <?php $iterator = 1; ?>
            <div id="bannerslider-list-items-<?= $sliderId; ?>"
                 class="owl-carousel owl-theme">
                <?php foreach ($banners as $banner) : ?>
                    <?php
                    $bnType  = $banner->getType();
                    $bnTitle = $banner->getTitle();
                    $bnUrl   = $banner->getUrlBanner();
                    $bnImg   = $banner->getImageUrl();
                    ?>
                    <?php if (($bnType === Type::CONTENT && empty($banner->getContent())) || ($bnType === Type::IMAGE && empty($banner->getImage()))) : continue; ?>
                    <?php endif; ?>
                    <?= ($iterator++ === 1) ? '<div class="banner-item banner-slider">' : '</div><div class="banner-item banner-slider">' ?>
                    <?php if ($bnType === Type::CONTENT) : ?>
                        <div class="item-content">
                            <?= $block->getPageFilter($banner->getContent()); ?>
                        </div>
                    <?php else : #image type?>
                        <div class="item-image">
                            <?php if (!empty($bnUrl)) : ?>
                                <a class="owl-image" title="<?= $bnTitle ?>"
                                   href="<?= $bnUrl ?>" <?= ($banner->getNewtab() === '1') ? 'target="_blank"' : '' ?>>
                                    <img class="img-responsive" src="<?= $bnImg ?>" alt="<?= $bnTitle ?>">
                                </a>
                            <?php else : ?>
                                <img class="owl-image img-responsive" src="<?= $bnImg ?>"
                                     alt="<?= $bnTitle ?>">
                            <?php endif; ?>
                        </div>
                    <?php endif; ?>
                    <?= ($iterator === count($banners) + 1) ? '</div>' : '' ?>
                <?php endforeach; ?>
            </div>
            <div class="custom-dots-container" id="custom-dots-container-<?= $sliderId; ?>">
                <?php foreach ($banners as $banner) : ?>
                    <div class="item owl-dot" title="<?= $banner->getTitle() ?>"><h3><?= $banner->getTitle() ?></h3></div>
                <?php endforeach; ?>
            </div>
        </div>
        <?= $block->getPagerHtml() ?>
    </div>

    <script>

        require(['jquery', 'mageplaza/core/owl.carousel'], function ($) {
            function responsive_banner() {
                if (window.innerWidth <= 767  || window.matchMedia("(max-width: 767px)").matches) {
                    $('#bannerslider-list-items-<?= $sliderId; ?>').owlCarousel(<?= $sliderOptions; ?>);

                    $('.custom-dots-container').hide();

                } else {
                    $('#bannerslider-list-items-<?= $sliderId; ?>').owlCarousel(<?= $customSliderOptions; ?>);

                    $('.banner-slider-carousel-<?= $sliderId; ?> .owl-dot').click(function () {
                        $('.banner-slider-carousel-<?= $sliderId; ?> .owl-carousel').trigger('to.owl.carousel', [$(this).index(), 500]);
                    });

                    $('.custom-dots-container').show();
                }
            }

            responsive_banner();

            $(window).resize(function() {
              responsive_banner();
            });
            $(document).ready(function() {
              responsive_banner();
            });
        });

    </script>
<?php endif; ?>
