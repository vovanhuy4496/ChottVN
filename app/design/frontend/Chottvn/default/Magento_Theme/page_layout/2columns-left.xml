<layout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_layout.xsd">
    <update handle="1column"/>
    <referenceContainer name="page.wrapper">
        <container name="main.content" htmlTag="main" htmlId="maincontent" htmlClass="page-main">
            <container name="columns" htmlTag="div" htmlClass="columns col2-layout">
                <container name="div.container" htmlTag="div" htmlClass="container">
                    <container name="additional.top" as="additional_top" label="Page Additional Top" htmlTag="div"
                             htmlClass="additional-top" before="-"/>
                    <container name="div.row" htmlTag="div" htmlClass="row" after="additional.top">
                        <container name="div.col-main-container" htmlTag="div"
                                       htmlClass="container col-lg-12 col-md-12 col-container">
                            <container name="div.col-main" htmlTag="div"
                                       htmlClass="order-2 col-right-main">
                                <container name="div.col-rightmain-bg" htmlTag="div"
                                       htmlClass="rightmain-bg">
                                    <container name="columns.top" label="Before Main Columns"/>
                                    <container name="main" label="Main Content Container" htmlTag="div"
                                               htmlClass="column main"/>
                                </container>
                            </container>

                            <container name="div.sidebar" htmlTag="div"
                                       htmlClass="order-1 col-left-sidebar">
                                <container name="div.col-leftmain-bg" htmlTag="div"
                                       htmlClass="sidebar-bg">
                                    <block class="Magento\Framework\View\Element\Template"
                                                name="block.sidebar.mobile"
                                                template="Magento_Theme::html/sidebar-mobile.phtml"
                                                cacheable="false" after="main" />
                                    <container name="div.sidebar.leftbar" htmlTag="div"
                                                htmlClass="sidebar-left d-none d-sm-none d-md-block d-lg-block"
                                                after="main">
                                        <container name="div.sidebar.main" htmlTag="div" htmlClass="sidebar sidebar-main"
                                                   after="block.sidebar.mobile">
                                            <container name="sidebar.main" as="sidebar_main" label="Sidebar Main"/>
                                        </container>
                                        <container name="div.sidebar.additional" htmlTag="div"
                                                   htmlClass="sidebar sidebar-additional" after="div.sidebar.main">
                                            <container name="sidebar.additional" as="sidebar_additional"
                                                       label="Sidebar Additional"/>
                                        </container>
                                    </container>
                                </container>
                            </container>
                        </container>
                    </container>
                    <container name="div.container.more.blocks" htmlTag="div" htmlClass="more-container-blocks"></container>
                    <container name="additional.bottom" as="additional_bottom" label="Page Additional Bottom" htmlTag="div"
                             htmlClass="additional-bottom" after="div.row"/>
                </container>
            </container>
        </container>
    </referenceContainer>
</layout>
