<?xml version="1.0" ?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
	<argument name="data" xsi:type="array">
		<item name="js_config" xsi:type="array">
			<item name="provider" xsi:type="string">chottvn_paymentaccount_bank_form.bank_form_data_source</item>
		</item>
		<item name="label" translate="true" xsi:type="string">General Information</item>
		<item name="template" xsi:type="string">templates/form/collapsible</item>
	</argument>
	<settings>
		<buttons>
			<button class="Chottvn\PaymentAccount\Block\Adminhtml\Bank\Edit\BackButton" name="back"/>
			<button class="Chottvn\PaymentAccount\Block\Adminhtml\Bank\Edit\DeleteButton" name="delete"/>
			<button class="Chottvn\PaymentAccount\Block\Adminhtml\Bank\Edit\SaveButton" name="save"/>
			<button class="Chottvn\PaymentAccount\Block\Adminhtml\Bank\Edit\SaveAndContinueButton" name="save_and_continue"/>
		</buttons>
		<namespace>chottvn_paymentaccount_bank_form</namespace>
		<dataScope>data</dataScope>
		<deps>
			<dep>chottvn_paymentaccount_bank_form.bank_form_data_source</dep>
		</deps>
	</settings>
	<dataSource name="bank_form_data_source">
		<argument name="data" xsi:type="array">
			<item name="js_config" xsi:type="array">
				<item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
			</item>
		</argument>
		<settings>
			<submitUrl path="*/*/save"/>
		</settings>
		<dataProvider class="Chottvn\PaymentAccount\Model\Bank\DataProvider" name="bank_form_data_source">
			<settings>
				<requestFieldName>bank_id</requestFieldName>
				<primaryFieldName>bank_id</primaryFieldName>
			</settings>
		</dataProvider>
	</dataSource>
	<fieldset name="general">
		<settings>
			<label>General</label>
		</settings>
		<field formElement="input" name="name" sortOrder="10">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="source" xsi:type="string">Bank</item>
				</item>
			</argument>
			<settings>
				<dataType>text</dataType>
				<label translate="true">Name</label>
				<dataScope>name</dataScope>
				<validation>
					<rule name="required-entry" xsi:type="boolean">false</rule>
				</validation>
			</settings>
		</field>
		<field formElement="input" name="name_short" sortOrder="11">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="source" xsi:type="string">Bank</item>
				</item>
			</argument>
			<settings>
				<dataType>text</dataType>
				<label translate="true">Short Name</label>
				<dataScope>name_short</dataScope>
				<validation>
					<rule name="required-entry" xsi:type="boolean">false</rule>
				</validation>
			</settings>
		</field>
		<field formElement="input" name="code" sortOrder="12">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="source" xsi:type="string">Bank</item>
				</item>
			</argument>
			<settings>
				<dataType>text</dataType>
				<label translate="true">Code</label>
				<dataScope>code</dataScope>
				<validation>
					<rule name="required-entry" xsi:type="boolean">false</rule>
				</validation>
			</settings>
		</field>
		<field formElement="textarea" name="description" sortOrder="20">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="source" xsi:type="string">Bank</item>
				</item>
			</argument>
			<settings>
				<dataType>text</dataType>
				<label translate="true">Description</label>
				<dataScope>description</dataScope>
				<validation>
					<rule name="required-entry" xsi:type="boolean">false</rule>
				</validation>
			</settings>
		</field>		
		<field formElement="fileUploader" name="image" sortOrder="40">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="dataType" xsi:type="string">string</item>
					<item name="source" xsi:type="string">Bank</item>
					<item name="visible" xsi:type="boolean">true</item>					
					<item name="elementTmpl" xsi:type="string">ui/form/element/uploader/uploader</item>
					<item name="previewTmpl" xsi:type="string">Chottvn_PaymentAccount/image-preview</item>
					<item name="uploaderConfig" xsi:type="array">
						<item name="url" xsi:type="url" path="chottvn_paymentaccount/bank/upload"/>
					</item>
				</item>
			</argument>
			<settings>						
				<label translate="true">Image</label>
				<dataScope>image</dataScope>
				<validation>
					<rule name="required-entry" xsi:type="boolean">false</rule>
				</validation>
			</settings>
		</field>
		<field formElement="input" name="order" sortOrder="50">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="source" xsi:type="string">Bank</item>
				</item>
			</argument>
			<settings>
				<dataType>text</dataType>
				<label translate="true">Order</label>
				<dataScope>order</dataScope>
				<validation>
					<rule name="required-entry" xsi:type="boolean">false</rule>
				</validation>
			</settings>
		</field>		
		<field name="status" formElement="select">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="source" xsi:type="string">Bank</item>
				</item>
			</argument>
			<settings>
				<dataType>text</dataType>
				<label translate="true">Status</label>
				<dataScope>status</dataScope>
			</settings>
			<formElements>
				<select>
					<settings>
						<options class="Magento\Config\Model\Config\Source\Enabledisable"/>
					</settings>
				</select>
			</formElements>
		</field>	
	</fieldset>
</form>
