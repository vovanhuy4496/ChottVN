<?xml version="1.0" ?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
	<argument name="data" xsi:type="array">
		<item name="js_config" xsi:type="array">
			<item name="provider" xsi:type="string">chottvn_notification_messagetype_form.chottvn_notification_messagetype_form_data_source</item>
		</item>
		<item name="label" translate="true" xsi:type="string">Message Type Information</item>
		<item name="template" xsi:type="string">templates/form/collapsible</item>
	</argument>
	<settings>
		<buttons>
			<button class="Chottvn\Notification\Block\Adminhtml\MessageType\Edit\BackButton" name="back"/>
			<button class="Chottvn\Notification\Block\Adminhtml\MessageType\Edit\DeleteButton" name="delete"/>
			<button class="Chottvn\Notification\Block\Adminhtml\MessageType\Edit\SaveButton" name="save"/>
			<button class="Chottvn\Notification\Block\Adminhtml\MessageType\Edit\SaveAndContinueButton" name="save_and_continue"/>
		</buttons>
		<namespace>chottvn_notification_messagetype_form</namespace>
		<dataScope>data</dataScope>
		<deps>
			<dep>chottvn_notification_messagetype_form.chottvn_notification_messagetype_form_data_source</dep>
		</deps>
	</settings>
	<dataSource name="chottvn_notification_messagetype_form_data_source">
		<argument name="data" xsi:type="array">
			<item name="js_config" xsi:type="array">
				<item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
			</item>
		</argument>
		<settings>
			<submitUrl path="*/*/save"/>
		</settings>
		<dataProvider class="Chottvn\Notification\Model\MessageType\DataProvider" name="chottvn_notification_messagetype_form_data_source">
			<settings>
				<requestFieldName>id</requestFieldName>
				<primaryFieldName>id</primaryFieldName>
			</settings>
		</dataProvider>
	</dataSource>
	<fieldset name="general">
		<settings>
			<label>Information</label>
		</settings>
		<field formElement="input" name="name" sortOrder="10">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="source" xsi:type="string">MessageType</item>
				</item>
			</argument>
			<settings>
				<dataType>text</dataType>
				<label translate="true">Name</label>
				<dataScope>name</dataScope>
				<validation>
					<rule name="required-entry" xsi:type="boolean">true</rule>
				</validation>
			</settings>
		</field>
		<field formElement="wysiwyg" template="ui/form/field" name="description" sortOrder="20">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="wysiwygConfigData" xsi:type="array">
                        <item name="height" xsi:type="string">100px</item>
                        <item name="add_variables" xsi:type="boolean">false</item>
                        <item name="add_widgets" xsi:type="boolean">false</item>
                        <item name="add_images" xsi:type="boolean">true</item>
                        <item name="add_directives" xsi:type="boolean">true</item>
                    </item>
					<item name="source" xsi:type="string">MessageType</item>
                </item>
            </argument>
            <settings>
				<label translate="true">Content</label>
				<dataScope>description</dataScope>
            </settings>
            <formElements>
                <wysiwyg class="Magento\Catalog\Ui\Component\Category\Form\Element\Wysiwyg">
                    <settings>
                        <rows>8</rows>
                        <wysiwyg>true</wysiwyg>
                    </settings>
                </wysiwyg>
            </formElements>
        </field>
		<field formElement="input" name="code" sortOrder="30">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="source" xsi:type="string">MessageType</item>
				</item>
			</argument>
			<settings>
				<dataType>text</dataType>
				<label translate="true">Code</label>
				<dataScope>code</dataScope>
			</settings>
		</field>
		<field formElement="textarea" name="configuration" sortOrder="30">
			<argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="formElement" xsi:type="string">textarea</item>
                    <item name="cols" xsi:type="number">15</item>
                    <item name="rows" xsi:type="number">5</item>
                    <item name="label" translate="true" xsi:type="string">Configuration</item>
                    <item name="dataType" translate="true" xsi:type="string">text</item>
					<item name="source" xsi:type="string">MessageType</item>
                </item>
            </argument>
			<settings>
				<dataType>text</dataType>
				<label translate="true">Configuration</label>
				<dataScope>configuration</dataScope>
			</settings>
		</field>
		<field formElement="select" name="status" sortOrder="40">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="source" xsi:type="string">MessageType</item>
				</item>
			</argument>
			<settings>
				<dataType>text</dataType>
				<label translate="true">Status</label>
				<dataScope>status</dataScope>
			</settings>
			<formElements>
				<select>
					<settings>
						<options class="Chottvn\Notification\Model\Message\Status"/>
						<caption translate="true">-- Please Select --</caption>
					</settings>
				</select>
			</formElements>
		</field>
