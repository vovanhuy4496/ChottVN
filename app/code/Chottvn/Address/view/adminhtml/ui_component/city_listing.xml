<?xml version="1.0"?>
<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">city_listing.city_listing_data_source</item>
        </item>
    </argument>
    <settings>
        <buttons>
            <button name="add">
                <url path="*/*/new"/>
                <class>primary</class>
                <label translate="true">Add New City</label>
            </button>
        </buttons>
        <spinner>address_city_columns</spinner>
        <deps>
            <dep>city_listing.city_listing_data_source</dep>
        </deps>
    </settings>
    <dataSource name="city_listing_data_source" component="Magento_Ui/js/grid/provider">
        <settings>
            <storageConfig>
                <param name="indexField" xsi:type="string">city_id</param>
            </storageConfig>
            <updateUrl path="mui/index/render"/>
        </settings>
        <aclResource>Chottvn_Address::city</aclResource>
        <dataProvider class="ChottvnAddressCityGridDataProvider" name="city_listing_data_source">
            <settings>
                <requestFieldName>city_id</requestFieldName>
                <primaryFieldName>city_id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>
    <listingToolbar name="listing_top">
        <settings>
            <sticky>false</sticky>
        </settings>
        <bookmark name="bookmarks"/>
        <columnsControls name="columns_controls"/>
        <filterSearch name="fulltext"/>
        <filters name="listing_filters">
            <settings>
                <templates>
                    <filters>
                        <select>
                            <param name="template" xsi:type="string">ui/grid/filters/elements/ui-select</param>
                            <param name="component" xsi:type="string">Magento_Ui/js/form/element/ui-select</param>
                        </select>
                    </filters>
                </templates>
            </settings>
        </filters>
        <massaction name="listing_massaction">
            <action name="delete">
                <settings>
                    <confirm>
                        <message translate="true">Are you sure you want to delete selected Cities?</message>
                        <title translate="true">Delete Cities</title>
                    </confirm>
                    <url path="*/*/massDelete"/>
                    <type>delete</type>
                    <label translate="true">Delete</label>
                </settings>
            </action>
        </massaction>
        <paging name="listing_paging"/>
    </listingToolbar>
    <columns name="address_city_columns">
        <selectionsColumn name="ids">
            <settings>
                <indexField>city_id</indexField>
            </settings>
        </selectionsColumn>
        <column name="city_id">
            <settings>
                <filter>textRange</filter>
                <label translate="true">ID</label>
                <sorting>desc</sorting>
            </settings>
        </column>
        <column name="region_name">
            <settings>
                <filter>text</filter>
                <label translate="true">Region Name</label>
            </settings>
        </column>
        <column name="default_name">
            <settings>
                <filter>text</filter>
                <label translate="true">City Name</label>
            </settings>
        </column>
        <actionsColumn name="actions" class="Chottvn\Address\Ui\Component\Listing\Column\CityActions">
            <settings>
                <indexField>city_id</indexField>
            </settings>
        </actionsColumn>
    </columns>
</listing>
