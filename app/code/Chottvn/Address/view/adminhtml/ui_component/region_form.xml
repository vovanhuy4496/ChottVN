<?xml version="1.0" encoding="UTF-8"?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">region_form.region_form_data_source</item>
        </item>
        <item name="label" xsi:type="string" translate="true">General Information</item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
    </argument>
    <settings>
        <buttons>
            <button name="save_and_continue" class="Chottvn\Address\Block\Adminhtml\Region\Edit\SaveAndContinueButton"/>
            <button name="save" class="Chottvn\Address\Block\Adminhtml\Region\Edit\SaveButton"/>
            <button name="reset" class="Chottvn\Address\Block\Adminhtml\Region\Edit\ResetButton"/>
            <button name="delete" class="Chottvn\Address\Block\Adminhtml\Region\Edit\DeleteButton"/>
            <button name="back" class="Chottvn\Address\Block\Adminhtml\Region\Edit\BackButton"/>
        </buttons>
        <namespace>region_form</namespace>
        <dataScope>data</dataScope>
        <deps>
            <dep>region_form.region_form_data_source</dep>
        </deps>
    </settings>
    <dataSource name="region_form_data_source">
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
            </item>
        </argument>
        <settings>
            <submitUrl path="*/*/save"/>
        </settings>
        <dataProvider class="Chottvn\Address\Ui\Component\Form\Region\DataProvider" name="region_form_data_source">
            <settings>
                <requestFieldName>region_id</requestFieldName>
                <primaryFieldName>region_id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>
    <fieldset name="general">
        <settings>
            <label/>
        </settings>
        <field name="region_id" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">region</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <visible>false</visible>
                <dataScope>region_id</dataScope>
            </settings>
        </field>
        <field name="country_id" formElement="select">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">region</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">Country</label>
                <dataScope>country_id</dataScope>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options class="Magento\Directory\Model\Config\Source\Country"/>
                        <caption translate="true">-- Please Select --</caption>
                    </settings>
                </select>
            </formElements>
        </field>
        <field name="code" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">region</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">State/Region/Province Code</label>
                <dataScope>code</dataScope>
            </settings>
        </field>
        <field name="default_name" sortOrder="20" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">region</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">State/Region/Province Name</label>
                <dataScope>default_name</dataScope>
            </settings>
        </field>
        <container name="store_view_labels" sortOrder="30">
            <htmlContent name="html_content">
                <block name="store_view_labels" class="Chottvn\Address\Block\Adminhtml\Region\Edit\Tab\Labels"/>
            </htmlContent>
        </container>
    </fieldset>
</form>
