<?xml version="1.0" encoding="UTF-8"?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">township_form.township_form_data_source</item>
        </item>
        <item name="label" xsi:type="string" translate="true">General Information</item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
    </argument>
    <settings>
        <buttons>
            <button name="save_and_continue" class="Chottvn\Address\Block\Adminhtml\Township\Edit\SaveAndContinueButton"/>
            <button name="save" class="Chottvn\Address\Block\Adminhtml\Township\Edit\SaveButton"/>
            <button name="reset" class="Chottvn\Address\Block\Adminhtml\Township\Edit\ResetButton"/>
            <button name="delete" class="Chottvn\Address\Block\Adminhtml\Township\Edit\DeleteButton"/>
            <button name="back" class="Chottvn\Address\Block\Adminhtml\Township\Edit\BackButton"/>
        </buttons>
        <namespace>township_form</namespace>
        <dataScope>data</dataScope>
        <deps>
            <dep>township_form.township_form_data_source</dep>
        </deps>
    </settings>
    <dataSource name="township_form_data_source">
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
            </item>
        </argument>
        <settings>
            <submitUrl path="*/*/save"/>
        </settings>
        <dataProvider class="Chottvn\Address\Ui\Component\Form\Township\DataProvider" name="township_form_data_source">
            <settings>
                <requestFieldName>township_id</requestFieldName>
                <primaryFieldName>township_id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>
    <fieldset name="general">
        <settings>
            <label/>
        </settings>
        <field name="township_id" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">township</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <visible>false</visible>
                <dataScope>township_id</dataScope>
            </settings>
        </field>
        <field name="city_id" formElement="select">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">township</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">City</label>
                <dataScope>city_id</dataScope>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options class="Chottvn\Address\Model\ResourceModel\Address\Attribute\Source\City"/>
                        <caption translate="true">-- Please Select --</caption>
                    </settings>
                </select>
            </formElements>
        </field>
        <field name="code" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">township</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">false</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">Township Code</label>
                <dataScope>code</dataScope>
            </settings>
        </field>
        <field name="default_name" sortOrder="20" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">township</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">Township Name</label>
                <dataScope>default_name</dataScope>
            </settings>
        </field>
        <container name="store_view_labels" sortOrder="30">
            <htmlContent name="html_content">
                <block name="store_view_labels" class="Chottvn\Address\Block\Adminhtml\Township\Edit\Tab\Labels"/>
            </htmlContent>
        </container>
    </fieldset>
</form>
