<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="Magento_Customer::customer">
                    <resource id="Chottvn_Address::address" title="Address">
                        <resource id="Chottvn_Address::region" title="Regions Manager">
                            <resource id="Chottvn_Address::region_create" title="Create"/>
                            <resource id="Chottvn_Address::region_edit" title="Edit" />
                            <resource id="Chottvn_Address::region_delete" title="Delete"/>
                        </resource>
                        <resource id="Chottvn_Address::city" title="Cities Manager">
                            <resource id="Chottvn_Address::city_create" title="Create"/>
                            <resource id="Chottvn_Address::city_edit" title="Edit" />
                            <resource id="Chottvn_Address::city_delete" title="Delete"/>
                        </resource>
                        <resource id="Chottvn_Address::township" title="Townships Manager">
                            <resource id="Chottvn_Address::township_create" title="Create"/>
                            <resource id="Chottvn_Address::township_edit" title="Edit" />
                            <resource id="Chottvn_Address::township_delete" title="Delete"/>
                        </resource>
                        <resource id="Chottvn_Address::import_address" title="Import Address"/>
                    </resource>
                </resource>
            </resource>
        </resources>
    </acl>
</config>
