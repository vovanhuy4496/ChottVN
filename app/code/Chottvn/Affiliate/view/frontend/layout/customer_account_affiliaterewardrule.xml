<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"  xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd" layout="2columns-left">
	<update handle="customer_account"/>
	<body>
		 <referenceBlock name="breadcrumbs">  
		 		<action method="addCrumb">
            <argument name="crumbName" xsi:type="string">home</argument>
            <argument name="crumbInfo" xsi:type="array">
                <item name="title" xsi:type="string">Home</item>
                <item name="label" xsi:type="string" translate="true">Home</item>
                <item name="link" xsi:type="string">/</item>
            </argument>
        </action>
        <action method="addCrumb">
            <argument name="crumbName" xsi:type="string">affiliate</argument>
            <argument name="crumbInfo" xsi:type="array">
                <item name="title" xsi:type="string">Affiliate</item>
                <item name="label" xsi:type="string" translate="true">Affiliate</item>
                <item name="link" xsi:type="string">/customer/account</item>
            </argument>
        </action>
        <action method="addCrumb">
            <argument name="crumbName" xsi:type="string">affiliaterewardrule</argument>    
            <argument name="crumbInfo" xsi:type="array">
                <item name="title" xsi:type="string" translate="true">Affiliate Reward Rules</item>
                <item name="label" xsi:type="string" translate="true">Affiliate Reward Rules</item>
                <!-- <item name="link" xsi:type="string" translate="true">/</item> -->
            </argument>        
        </action>
    </referenceBlock>
		<referenceContainer name="content">
			<block class="Magento\Cms\Block\Block" >
       	<arguments>
          <argument name="block_id" xsi:type="string">affiliate-rewardrule-header</argument>
       	</arguments>
    	</block>
			<block class="Chottvn\Affiliate\Block\RewardRule\RuleList" template="rewardrule/rulelist.phtml" cacheable="false"/>
			<block class="Magento\Cms\Block\Block" >
       	<arguments>
          <argument name="block_id" xsi:type="string">affiliate-rewardrule-footer</argument>
       	</arguments>
    	</block>
		</referenceContainer>
	</body>
</page>