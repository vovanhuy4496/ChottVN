<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">

    <preference for="Chottvn\PriceDecimal\Model\ConfigInterface" type="Chottvn\PriceDecimal\Model\Config" />
    <preference for="Magento\Framework\CurrencyInterface" type="Chottvn\PriceDecimal\Model\Currency" />

    <type name="Magento\Framework\Pricing\PriceCurrencyInterface">
        <plugin name="lillik_price_decimal_price_currency" type="Chottvn\PriceDecimal\Model\Plugin\PriceCurrency" sortOrder="10" disabled="false"/>
    </type>
    <type name="Magento\Framework\Locale\FormatInterface">
        <plugin name="lillik_price_decimal_local_format" type="Chottvn\PriceDecimal\Model\Plugin\Local\Format" sortOrder="10" disabled="false"/>
    </type>
    <type name="Magento\Sales\Api\Data\OrderInterface">
        <plugin name="lillik_price_decimal_for_orders" type="Chottvn\PriceDecimal\Model\Plugin\OrderPlugin" sortOrder="10" disabled="false"/>
    </type>

    <type name="Magento\Framework\CurrencyInterface">
        <plugin name="lillik_price_decimal_for_currency" type="Chottvn\PriceDecimal\Model\Plugin\Currency" sortOrder="10" disabled="false"/>
    </type>
    
    <type name="Magento\Checkout\CustomerData\Cart">
        <plugin name="chottvn_priceDecimal_cart_private_data_tax" type="Chottvn\PriceDecimal\Plugin\Checkout\CustomerData\Cart"/>
    </type>

    <!-- <preference for="Magento\Checkout\Helper\Data" type="Chottvn\PriceDecimal\Helper\Data" />
    <preference for="Magento\Weee\Block\Item\Price\Renderer" type="Chottvn\PriceDecimal\Block\Item\Price\Renderer" /> -->
    <type name="Magento\Checkout\Helper\Data">
        <plugin name="chottvn_priceDecimal_helper_data" type="Chottvn\PriceDecimal\Helper\Data" sortOrder="10" disabled="false"/>
    </type>
    <type name="Magento\Weee\Block\Item\Price\Renderer">
        <plugin name="chottvn_priceDecimal_block_item_price_renderer" type="Chottvn\PriceDecimal\Block\Item\Price\Renderer" sortOrder="10" disabled="false"/>
    </type>
</config>
