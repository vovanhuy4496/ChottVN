<?xml version="1.0" ?>
<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">
	<route method="POST" url="/V1/chottvn-pricequote/request">
		<service class="Chottvn\PriceQuote\Api\RequestRepositoryInterface" method="save"/>
		<resources>
			<resource ref="Chottvn_PriceQuote::request_save"/>
		</resources>
	</route>
	<route method="GET" url="/V1/chottvn-pricequote/request/search">
		<service class="Chottvn\PriceQuote\Api\RequestRepositoryInterface" method="getList"/>
		<resources>
			<resource ref="Chottvn_PriceQuote::request_view"/>
		</resources>
	</route>
	<route method="GET" url="/V1/chottvn-pricequote/request/:requestId">
		<service class="Chottvn\PriceQuote\Api\RequestRepositoryInterface" method="get"/>
		<resources>
			<resource ref="Chottvn_PriceQuote::request_view"/>
		</resources>
	</route>
	<route method="PUT" url="/V1/chottvn-pricequote/request/:requestId">
		<service class="Chottvn\PriceQuote\Api\RequestRepositoryInterface" method="save"/>
		<resources>
			<resource ref="Chottvn_PriceQuote::request_update"/>
		</resources>
	</route>
	<route method="DELETE" url="/V1/chottvn-pricequote/request/:requestId">
		<service class="Chottvn\PriceQuote\Api\RequestRepositoryInterface" method="deleteById"/>
		<resources>
			<resource ref="Chottvn_PriceQuote::request_delete"/>
		</resources>
	</route>
</routes>
