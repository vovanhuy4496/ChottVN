<?xml version="1.0" ?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
	<argument name="data" xsi:type="array">
		<item name="js_config" xsi:type="array">
			<item name="provider" xsi:type="string">chottvn_pricequote_request_form.request_form_data_source</item>
		</item>
		<item name="label" translate="true" xsi:type="string">General Information</item>
		<item name="template" xsi:type="string">templates/form/collapsible</item>
	</argument>
	<settings>
		<buttons>
			<button class="Chottvn\PriceQuote\Block\Adminhtml\Request\Edit\BackButton" name="back"/>
			<button class="Chottvn\PriceQuote\Block\Adminhtml\Request\Edit\DeleteButton" name="delete"/>
			<button class="Chottvn\PriceQuote\Block\Adminhtml\Request\Edit\SaveButton" name="save"/>
			<button class="Chottvn\PriceQuote\Block\Adminhtml\Request\Edit\SaveAndContinueButton" name="save_and_continue"/>
		</buttons>
		<namespace>chottvn_pricequote_request_form</namespace>
		<dataScope>data</dataScope>
		<deps>
			<dep>chottvn_pricequote_request_form.request_form_data_source</dep>
		</deps>
	</settings>
	<dataSource name="request_form_data_source">
		<argument name="data" xsi:type="array">
			<item name="js_config" xsi:type="array">
				<item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
			</item>
		</argument>
		<settings>
			<submitUrl path="*/*/save"/>
		</settings>
		<dataProvider class="Chottvn\PriceQuote\Model\Request\DataProvider" name="request_form_data_source">
			<settings>
				<requestFieldName>request_id</requestFieldName>
				<primaryFieldName>request_id</primaryFieldName>
			</settings>
		</dataProvider>
	</dataSource>
	<fieldset name="general">
		<settings>
			<label>General</label>
		</settings>
		<field formElement="input" name="customer_id" sortOrder="10">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="source" xsi:type="string">Request</item>
				</item>
			</argument>
			<settings>
				<dataType>text</dataType>
				<label translate="true">customer_id</label>
				<dataScope>customer_id</dataScope>
				<validation>
					<rule name="required-entry" xsi:type="boolean">false</rule>
				</validation>
			</settings>
		</field>
		<field formElement="input" name="company_name" sortOrder="20">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="source" xsi:type="string">Request</item>
				</item>
			</argument>
			<settings>
				<dataType>text</dataType>
				<label translate="true">company_name</label>
				<dataScope>company_name</dataScope>
				<validation>
					<rule name="required-entry" xsi:type="boolean">false</rule>
				</validation>
			</settings>
		</field>
		<field formElement="input" name="company_address" sortOrder="30">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="source" xsi:type="string">Request</item>
				</item>
			</argument>
			<settings>
				<dataType>text</dataType>
				<label translate="true">company_address</label>
				<dataScope>company_address</dataScope>
				<validation>
					<rule name="required-entry" xsi:type="boolean">false</rule>
				</validation>
			</settings>
		</field>
		<field formElement="input" name="company_vat_number" sortOrder="40">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="source" xsi:type="string">Request</item>
				</item>
			</argument>
			<settings>
				<dataType>text</dataType>
				<label translate="true">company_vat_number</label>
				<dataScope>company_vat_number</dataScope>
				<validation>
					<rule name="required-entry" xsi:type="boolean">false</rule>
				</validation>
			</settings>
		</field>
		<field formElement="input" name="contact_name" sortOrder="50">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="source" xsi:type="string">Request</item>
				</item>
			</argument>
			<settings>
				<dataType>text</dataType>
				<label translate="true">contact_name</label>
				<dataScope>contact_name</dataScope>
				<validation>
					<rule name="required-entry" xsi:type="boolean">false</rule>
				</validation>
			</settings>
		</field>
		<field formElement="input" name="contact_phone_number" sortOrder="60">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="source" xsi:type="string">Request</item>
				</item>
			</argument>
			<settings>
				<dataType>text</dataType>
				<label translate="true">contact_phone_number</label>
				<dataScope>contact_phone_number</dataScope>
				<validation>
					<rule name="required-entry" xsi:type="boolean">false</rule>
				</validation>
			</settings>
		</field>
		<field formElement="input" name="contact_email" sortOrder="70">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="source" xsi:type="string">Request</item>
				</item>
			</argument>
			<settings>
				<dataType>text</dataType>
				<label translate="true">contact_email</label>
				<dataScope>contact_email</dataScope>
				<validation>
					<rule name="required-entry" xsi:type="boolean">false</rule>
				</validation>
			</settings>
		</field>
	</fieldset>
</form>
