<?xml version="1.0" ?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
	<argument name="data" xsi:type="array">
		<item name="js_config" xsi:type="array">
			<item name="provider" xsi:type="string">chottvn_inventory_log_form.log_form_data_source</item>
		</item>
		<item name="label" translate="true" xsi:type="string">General Information</item>
		<item name="template" xsi:type="string">templates/form/collapsible</item>
	</argument>
	<settings>
		<buttons>
			<button class="Chottvn\Inventory\Block\Adminhtml\Log\Edit\BackButton" name="back"/>
			<button class="Chottvn\Inventory\Block\Adminhtml\Log\Edit\DeleteButton" name="delete"/>
			<button class="Chottvn\Inventory\Block\Adminhtml\Log\Edit\SaveButton" name="save"/>
			<button class="Chottvn\Inventory\Block\Adminhtml\Log\Edit\SaveAndContinueButton" name="save_and_continue"/>
		</buttons>
		<namespace>chottvn_inventory_log_form</namespace>
		<dataScope>data</dataScope>
		<deps>
			<dep>chottvn_inventory_log_form.log_form_data_source</dep>
		</deps>
	</settings>
	<dataSource name="log_form_data_source">
		<argument name="data" xsi:type="array">
			<item name="js_config" xsi:type="array">
				<item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
			</item>
		</argument>
		<settings>
			<submitUrl path="*/*/save"/>
		</settings>
		<dataProvider class="Chottvn\Inventory\Model\Log\DataProvider" name="log_form_data_source">
			<settings>
				<requestFieldName>log_id</requestFieldName>
				<primaryFieldName>log_id</primaryFieldName>
			</settings>
		</dataProvider>
	</dataSource>
	<fieldset name="general">
		<settings>
			<label>General</label>
		</settings>
		<field formElement="input" name="user_id" sortOrder="10">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="source" xsi:type="string">Log</item>
				</item>
			</argument>
			<settings>
				<dataType>text</dataType>
				<label translate="true">user_id</label>
				<dataScope>user_id</dataScope>
				<validation>
					<rule name="required-entry" xsi:type="boolean">false</rule>
				</validation>
			</settings>
		</field>
		<field formElement="input" name="log_type" sortOrder="20">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="source" xsi:type="string">Log</item>
				</item>
			</argument>
			<settings>
				<dataType>text</dataType>
				<label translate="true">log_type</label>
				<dataScope>log_type</dataScope>
				<validation>
					<rule name="required-entry" xsi:type="boolean">false</rule>
				</validation>
			</settings>
		</field>
		<field formElement="textarea" name="file_name" sortOrder="30">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="source" xsi:type="string">Log</item>
				</item>
			</argument>
			<settings>
				<dataType>text</dataType>
				<label translate="true">file_name</label>
				<dataScope>file_name</dataScope>
				<validation>
					<rule name="required-entry" xsi:type="boolean">false</rule>
				</validation>
			</settings>
		</field>
		<field formElement="input" name="file_row_count" sortOrder="40">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="source" xsi:type="string">Log</item>
				</item>
			</argument>
			<settings>
				<dataType>text</dataType>
				<label translate="true">file_row_count</label>
				<dataScope>file_row_count</dataScope>
				<validation>
					<rule name="required-entry" xsi:type="boolean">false</rule>
				</validation>
			</settings>
		</field>
		<field formElement="input" name="feature_type" sortOrder="50">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="source" xsi:type="string">Log</item>
				</item>
			</argument>
			<settings>
				<dataType>text</dataType>
				<label translate="true">feature_type</label>
				<dataScope>feature_type</dataScope>
				<validation>
					<rule name="required-entry" xsi:type="boolean">false</rule>
				</validation>
			</settings>
		</field>
		<field formElement="input" name="status" sortOrder="60">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="source" xsi:type="string">Log</item>
				</item>
			</argument>
			<settings>
				<dataType>text</dataType>
				<label translate="true">status</label>
				<dataScope>status</dataScope>
				<validation>
					<rule name="required-entry" xsi:type="boolean">false</rule>
				</validation>
			</settings>
		</field>
		<field formElement="input" name="affected_row_count" sortOrder="70">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="source" xsi:type="string">Log</item>
				</item>
			</argument>
			<settings>
				<dataType>text</dataType>
				<label translate="true">affected_row_count</label>
				<dataScope>affected_row_count</dataScope>
				<validation>
					<rule name="required-entry" xsi:type="boolean">false</rule>
				</validation>
			</settings>
		</field>
		<field formElement="textarea" name="details" sortOrder="80">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="source" xsi:type="string">Log</item>
				</item>
			</argument>
			<settings>
				<dataType>text</dataType>
				<label translate="true">details</label>
				<dataScope>details</dataScope>
				<validation>
					<rule name="required-entry" xsi:type="boolean">false</rule>
				</validation>
			</settings>
		</field>
	</fieldset>
</form>
