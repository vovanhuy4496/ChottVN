<?xml version="1.0" ?>
<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">
	<route method="POST" url="/V1/chottvn-inventory/log">
		<service class="Chottvn\Inventory\Api\LogRepositoryInterface" method="save"/>
		<resources>
			<resource ref="Chottvn_Inventory::log_save"/>
		</resources>
	</route>
	<route method="GET" url="/V1/chottvn-inventory/log/search">
		<service class="Chottvn\Inventory\Api\LogRepositoryInterface" method="getList"/>
		<resources>
			<resource ref="Chottvn_Inventory::log_view"/>
		</resources>
	</route>
	<route method="GET" url="/V1/chottvn-inventory/log/:logId">
		<service class="Chottvn\Inventory\Api\LogRepositoryInterface" method="get"/>
		<resources>
			<resource ref="Chottvn_Inventory::log_view"/>
		</resources>
	</route>
	<route method="PUT" url="/V1/chottvn-inventory/log/:logId">
		<service class="Chottvn\Inventory\Api\LogRepositoryInterface" method="save"/>
		<resources>
			<resource ref="Chottvn_Inventory::log_update"/>
		</resources>
	</route>
	<route method="DELETE" url="/V1/chottvn-inventory/log/:logId">
		<service class="Chottvn\Inventory\Api\LogRepositoryInterface" method="deleteById"/>
		<resources>
			<resource ref="Chottvn_Inventory::log_delete"/>
		</resources>
	</route>
</routes>
