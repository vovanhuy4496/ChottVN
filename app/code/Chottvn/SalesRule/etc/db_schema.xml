<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">    
    <table name="chottvn_log_promo">
        <column xsi:type="bigint" name="id"  identity="true" unsigned="true" nullable="false" comment="Id"/>
        <column xsi:type="bigint" name="affiliate_account_id"  unsigned="true" nullable="true" comment="Affiliate Account Id"/>
        <column xsi:type="bigint" name="customer_id"  unsigned="true" nullable="true" comment="Customer Id"/>
        <column xsi:type="bigint" name="salesrule_id"  unsigned="true" nullable="true" comment="Salesrule Id"/>
        <column xsi:type="bigint" name="order_id"  unsigned="true" nullable="true" comment="Order Id"/>
        <column xsi:type="bigint" name="finance_transaction_id"  unsigned="true" nullable="true" comment="Finance Transaction Id"/>
        <column xsi:type="varchar" name="event" nullable="true" length="255" comment="Event:"/>
        <column xsi:type="text" name="fields" nullable="true" comment="Fields JSON"/>
        <column xsi:type="text" name="note" nullable="true" comment="Note"/>
        <column xsi:type="timestamp" name="created_at" nullable="true" comment="Created Date" default="CURRENT_TIMESTAMP"/>
        <column xsi:type="timestamp" name="updated_at" nullable="true" comment="Updated Date" default="CURRENT_TIMESTAMP"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="id"/>
        </constraint>
    </table>    
</schema>